<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#2B4DF4</item>
    </style>

    <style name="forgotButton" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#6565E3</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="signInUpButton" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorButtons</item>
        <item name="android:shadowColor">#2B4DF4</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="signInUpDeSelected" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:shadowColor">#2B4DF4</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SigninupTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorButtons</item>
        <item name="tabMaxWidth">200dp</item>
        <item name="tabTextAppearance">@style/signInUpDeSelected</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorButtons</item>
    </style>
    <style name="SigninupTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:color">#AFAFAF</item>
    </style>

</resources>
